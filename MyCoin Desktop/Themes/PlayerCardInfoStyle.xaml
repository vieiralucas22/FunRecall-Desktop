<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:MyCoin_Desktop.Controls">
    <Style TargetType="controls:PlayerCardInfo">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:PlayerCardInfo">
                    <Border BorderThickness="2"
                            BorderBrush="#524bfd"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            CornerRadius="20">
                        <StackPanel Orientation="Vertical"
                                    Background="#80000000"
                                    Padding="50">
                            <Grid x:Name="PlayerAvatar"
                                  Width="100"
                                  Height="100"
                                  CornerRadius="100"
                                  Visibility="Collapsed">
                                <Grid.Background>
                                    <ImageBrush ImageSource="ms-appx:///Assets/Images/Avatar1.png" />
                                </Grid.Background>
                            </Grid>

                            <TextBlock x:Name="PlayerName"
                                       Text="Lucas Vieira Brito"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       FontFamily="Comic Sans MS"
                                       Margin="0,10" />


                            <Image x:Name="PlayerRepresentation"
                                   Source="ms-appx:///Assets/Images/O.png"
                                   Width="50" />

                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
