<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:MyCoin_Desktop.Controls">

    <Style TargetType="controls:TicTacToeBoard">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:TicTacToeBoard">
                    <Grid Background="#80000000"
                          CornerRadius="16"
                          Padding="20"
                          MaxWidth="650"
                          MaxHeight="650">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <controls:TicTacToeBoardButton x:Name="Btn1"
                                                       Tag="0:0" />
                        <controls:TicTacToeBoardButton x:Name="Btn2"
                                                       Tag="0:1"
                                                       Grid.Column="1" />
                        <controls:TicTacToeBoardButton x:Name="Btn3"
                                                       Tag="0:2"
                                                       Grid.Column="2" />
                        <controls:TicTacToeBoardButton x:Name="Btn4"
                                                       Tag="1:0"
                                                       Grid.Row="1" />
                        <controls:TicTacToeBoardButton x:Name="Btn5"
                                                       Tag="1:1"
                                                       Grid.Column="1"
                                                       Grid.Row="1" />
                        <controls:TicTacToeBoardButton x:Name="Btn6"
                                                       Tag="1:2"
                                                       Grid.Column="2"
                                                       Grid.Row="1" />
                        <controls:TicTacToeBoardButton x:Name="Btn7"
                                                       Tag="2:0"
                                                       Grid.Row="2" />
                        <controls:TicTacToeBoardButton x:Name="Btn8"
                                                       Tag="2:1"
                                                       Grid.Column="1"
                                                       Grid.Row="2" />
                        <controls:TicTacToeBoardButton x:Name="Btn9"
                                                       Tag="2:2"
                                                       Grid.Column="2"
                                                       Grid.Row="2" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>
