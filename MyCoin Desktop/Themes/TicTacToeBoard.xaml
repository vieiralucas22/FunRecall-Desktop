<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:MyCoin_Desktop.Controls">

    <Style TargetType="controls:TicTacToeBoard">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:TicTacToeBoard">
                    <Grid Background="#80000000"
                          CornerRadius="16"
                          Padding="20"
                          MaxWidth="700"
                          MaxHeight="700">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <controls:TicTacToeBoardButton />
                        <controls:TicTacToeBoardButton Grid.Column="1" />
                        <controls:TicTacToeBoardButton Grid.Column="2" />
                        <controls:TicTacToeBoardButton Grid.Row="1" />
                        <controls:TicTacToeBoardButton Grid.Column="1"
                                                       Grid.Row="1" />
                        <controls:TicTacToeBoardButton Grid.Column="2"
                                                       Grid.Row="1" />
                        <controls:TicTacToeBoardButton Grid.Row="2" />
                        <controls:TicTacToeBoardButton Grid.Column="1"
                                                       Grid.Row="2" />
                        <controls:TicTacToeBoardButton Grid.Column="2"
                                                       Grid.Row="2" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>
