<Page x:Class="MyCoin_Desktop.Views.CreateAccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:MyCoin_Desktop.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:prism="using:Prism.Windows.Mvvm"
      prism:ViewModelLocator.AutoWireViewModel="True"
      mc:Ignorable="d"
      Background="#1D1C3B">

    <Grid Padding="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" CornerRadius="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="25*" />
                <RowDefinition Height="50*" />
                <RowDefinition Height="25*" />
            </Grid.RowDefinitions>

            <Grid.Background>
                <ImageBrush ImageSource="../Assets/Images/background.jpeg" />
            </Grid.Background>

            <TextBlock Text="Bem vindo ao EtCoin!"
                       TextAlignment="Center"
                       FontSize="40"
                       FontWeight="SemiBold"
                       Grid.Row="0"
                       VerticalAlignment="Center" />
            
            <Image Width="419"
                   Source="../Assets/Images/astroboy.png"
                   Grid.Row="1" />

            <TextBlock Text="Um aplicativo de outro mundo para aprender educação financeira de maneira divertida!"
                       TextAlignment="Center"
                       FontSize="40"
                       FontWeight="SemiBold"
                       Grid.Row="2"
                       TextWrapping="Wrap" />
        </Grid>

        <Grid Grid.Column="1"
              Padding="0,50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*" />
                <ColumnDefinition Width="70*" />
                <ColumnDefinition Width="15*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Criar conta"
                           FontSize="60" />

                <TextBox PlaceholderText="Email"
                         FontSize="20"
                         BorderThickness="0"
                         CornerRadius="12"
                         Padding="15"
                         Margin="0,50,0,0"
                         InputScope="EmailSmtpAddress" />

                <TextBox PlaceholderText="dd/mm/aaaa"
                         FontSize="20"
                         BorderThickness="0"
                         CornerRadius="12"
                         Padding="15"
                         Margin="0,26,0,0"
                         InputScope="DateDayNumber" />

                <PasswordBox PlaceholderText="Senha"
                             FontSize="20"
                             BorderThickness="0"
                             CornerRadius="12"
                             Padding="15"
                             Margin="0,26,0,0" />

                <PasswordBox PlaceholderText="Confirmar senha"
                             FontSize="20"
                             BorderThickness="0"
                             CornerRadius="12"
                             Padding="15"
                             Margin="0,26,0,0" />


                <Button Content="Entrar"
                        HorizontalAlignment="Stretch"
                        Padding="15"
                        CornerRadius="12"
                        Background="#49285F"
                        FontSize="24"
                        Margin="0,55,0,30"
                        Click="{x:Bind ViewModel.navigateToLogin}"/>

                <Image Source="../Assets/Images/EtCoin_logo.png"
                       Width="190" />
            </StackPanel>
        </Grid>


    </Grid>
</Page>
