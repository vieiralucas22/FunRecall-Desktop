<Page x:Class="MyCoin_Desktop.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:MyCoin_Desktop.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="#1D1C3B">

    <Grid Padding="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>

        <Grid Width="auto"
              Height="auto"
              Grid.Column="0"
              CornerRadius="16"
              Padding="10">

            <Grid.RowDefinitions>
                <RowDefinition Height="25*" />
                <RowDefinition Height="50*" />
                <RowDefinition Height="25*" />
            </Grid.RowDefinitions>

            <Grid.Background>
                <ImageBrush ImageSource="../Assets/Images/background.jpeg" />
            </Grid.Background>

            <TextBlock Text="Bem vindo ao EtCoin!"
                       TextAlignment="Center"
                       FontSize="40"
                       FontWeight="SemiBold"
                       Grid.Row="0"
                       VerticalAlignment="Center" />

            <Image Width="419"
                   Source="../Assets/Images/astroboy.png"
                   Grid.Row="1" />

            <TextBlock Text="Um aplicativo de outro mundo para aprender educação financeira de maneira divertida!"
                       TextAlignment="Center"
                       FontSize="40"
                       FontWeight="SemiBold"
                       Grid.Row="2"
                       TextWrapping="Wrap" />

        </Grid>

        <Grid Grid.Column="1"
              Padding="0,50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*" />
                <ColumnDefinition Width="70*" />
                <ColumnDefinition Width="15*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Login"
                           FontSize="60" />

                <TextBox PlaceholderText="Email"
                         FontSize="20"
                         BorderThickness="0"
                         CornerRadius="12"
                         Padding="15"
                         Margin="0,50,0,0"
                         InputScope="EmailSmtpAddress" />

                <PasswordBox PlaceholderText="Senha"
                             FontSize="20"
                             BorderThickness="0"
                             CornerRadius="12"
                             Padding="15"
                             Margin="0,20,0,0" />

                <Grid Margin="0, 20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <CheckBox Content="Lembre de mim"
                              HorizontalAlignment="Left"
                              Grid.Column="0"
                              FontSize="15" />

                    <Button Content="Esqueceu sua senha?"
                            Padding="0"
                            HorizontalAlignment="Right"
                            Grid.Column="1"
                            Background="Transparent"
                            FontSize="15"
                            Click="Button_Click" />
                </Grid>

                <Button Content="Entrar"
                        HorizontalAlignment="Stretch"
                        Padding="10"
                        CornerRadius="12"
                        Background="#49285F"
                        FontSize="24" />

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0, 70, 0, 60">

                    <TextBlock Text="Novo usuário? "
                               FontSize="20" />
                    <Button Content="Crie uma nova conta!"
                            Background="Transparent"
                            FontSize="20"
                            Padding="0"
                            Foreground="#49285F" />
                </StackPanel>

                <Image Source="../Assets/Images/EtCoin_logo.png"
                       Width="190" />
            </StackPanel>
        </Grid>

    </Grid>
</Page>
