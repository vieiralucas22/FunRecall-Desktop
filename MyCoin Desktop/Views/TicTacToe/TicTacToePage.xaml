<Page x:Class="MyCoin_Desktop.Views.TicTacToePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:MyCoin_Desktop.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid Padding="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2.5*"/>
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/Images/games_background.jpg" />
        </Grid.Background>

        <Image Width="220"
               Source="ms-appx:///Assets/Images/astroboy.png"
               Grid.Row="0" 
               VerticalAlignment="Top"/>

        <StackPanel Grid.Column="1">

            <TextBlock FontSize="80"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center"
                       Margin="0,50"
                       Foreground="White"
                       FontWeight="SemiBold"
                       FontFamily="Comic Sans MS">
                        <Run Text="T" />
                        <Run Text="I" />
                        <Run Text="C" />
                        <LineBreak />
                        <Run Text="T" />
                        <Run Text="A" />
                        <Run Text="C" />
                        <LineBreak />
                        <Run Text="T" />
                        <Run Text="O" />
                        <Run Text="E" />
            </TextBlock>

            <Button Content="Local Multiplayer"
                    FontSize="40"
                    FontWeight="SemiBold"
                    Background="#1D1C3B"
                    Foreground="White"
                    MinWidth="400"
                    Padding="20"
                    Margin="0,30,0,30"
                    HorizontalAlignment="Center"
                    CornerRadius="12"
                    FontFamily="Comic Sans MS"/>

            <Button Content="Online Multiplayer"
                    FontSize="40"
                    FontWeight="SemiBold"
                    Background="#1D1C3B"
                    Foreground="White"
                    Padding="20"
                    MinWidth="400"
                    HorizontalAlignment="Center"
                    CornerRadius="12"
                    FontFamily="Comic Sans MS"/>
        </StackPanel>

        <Image Width="220"
               Source="ms-appx:///Assets/Images/EtCoin_logo.png"
               Grid.Column="2"
               VerticalAlignment="Bottom" />

    </Grid>

</Page>
